#!/bin/sh

case $1 in
	-p|--performance) gov="performance" ;;
	-s|--schedutil) gov="schedutil" ;;
	-ps|--power-save) gov="powersave" ;;
	-o|--on-demand) gov="ondemand" ;;
	*) echo -e "\e[31mInvalid Option.\e[0m"; exit 1 ;;
esac


if [ ! -z $1 ] && [ $EUID -eq 0 ]; then
	for c in /sys/devices/system/cpu/cpu?/cpufreq/scaling_governor; do
		echo -n $gov > $c
	done
fi
