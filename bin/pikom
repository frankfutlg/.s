#!/bin/bash

pidcom=($(pgrep -x picom))

check() {
	[ "$(command -v picom)" ] && return 0 || exit 0
}

startp() {
	[ ! "$pidcom" ] || kill -9 "$pidcom"
}

stopp() {
	[ "$pidcom" ] || setsid -f picom >/dev/null &
}

case $1 in
	--start) check && startp ;;
	--stop) check && stopp ;;
	*) echo -e "\e[31mInvalid option.\e[0m"; exit 1 ;;
esac
